<!DOCTYPE html>
<html>
  <head>
    <title>DanceMatch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <nav class="bg-gray-900 text-white px-6 py-4" data-controller="navbar">
    <div class="flex justify-between items-center">
      <div class="text-2xl font-bold">
        <%= link_to "DanceMatch", root_path, class: "hover:text-blue-400" %>
      </div>

      <!-- Hamburger Button (visible en mobile) -->
      <button data-action="click->navbar#toggle" class="lg:hidden text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex space-x-4">
        <% if user_signed_in? %>
          <%= link_to "Swipe", root_path, class: "hover:text-blue-300" %>
          <%= link_to "Matchs", matches_path, class: "hover:text-blue-300" %>
          <%= link_to "Mon profil", edit_profile_path, class: "hover:text-blue-300" %>
          <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "hover:text-red-400" %>
        <% else %>
          <%= link_to "Connexion", new_user_session_path, class: "hover:text-green-300" %>
          <%= link_to "Inscription", new_user_registration_path, class: "hover:text-green-300" %>
        <% end %>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div data-navbar-target="menu" class="lg:hidden mt-2 hidden flex-col space-y-2">
      <% if user_signed_in? %>
        <%= link_to "Swipe", root_path, class: "block hover:text-blue-300" %>
        <%= link_to "Matchs", matches_path, class: "block hover:text-blue-300" %>
        <%= link_to "Mon profil", edit_profile_path, class: "block hover:text-blue-300" %>
        <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "block hover:text-red-400" %>
      <% else %>
        <%= link_to "Connexion", new_user_session_path, class: "block hover:text-green-300" %>
        <%= link_to "Inscription", new_user_registration_path, class: "block hover:text-green-300" %>
      <% end %>
    </div>
  </nav>
</body>
</html>
